<div class="container">
  <div class="center">
      <img src="<%= @cocktail.picurl %>", style="width:450px;height:350px";>
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Edit", edit_cocktail_path(@cocktail), class: "btn btn-danger" %>
        <%= link_to "Go Back", cocktails_path, class: "btn btn-danger" %>
        <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: {confirm: "Are you sure? Don't you love cocktails?"},  class: "btn btn-danger"%>

        <p>
          <%= link_to "add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
        </p>


      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> (<%= dose.ingredient.name %>)
          <%= link_to "delete", dose_path(dose), method: :delete%></p>
      <% end %>
  </div>
</div>
